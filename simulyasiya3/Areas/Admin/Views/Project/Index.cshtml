@model IEnumerable<ProjectVM>

<table class="table table-bordered table-dark">

    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Department</th>
            <th scope="col">Image</th>
            <th scope="col">Created</th>
            <th scope="col"><a asp-action="Create" asp-controller="project" class="btn btn-primary">Create</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <th scope="row">@project.Id</th>
                <td>@project.Name</td>
                <td>@project.Department</td>
                <td><img width="50px" height="50px" src="@project.ImageUrl" alt="Alternate Text" /></td>
                <td>@project.Created</td>
                <td>
                    <form method="post" asp-action="Delete" asp-controller="Project" asp-route-id="@project.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <form method="post" asp-action="Update" asp-controller="Project" asp-route-id="@project.Id">
                        <button type="submit" class="btn btn-success">Update</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>
